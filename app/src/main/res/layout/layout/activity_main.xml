<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:gravity="center"
        android:textSize="40sp"/>
    <Button
        android:id="@+id/btnMainQLHS"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý học sinh"/>
    <Button
        android:id="@+id/btnMainQLHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý học phí"/>
    <Button
        android:id="@+id/btnMainQLThuHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Thu học phí"/>
    <Button
        android:id="@+id/btnMainDSDongHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh Sách đóng học phí"/>
</LinearLayout>